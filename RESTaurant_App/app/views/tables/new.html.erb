<h1>New Table Form</h1>

    <div class="ui text container">
      <div class="ui form">
        <%= form_for @table  do |f| %>
          <div class="two centered fields">    
            <div class="field">
              <%= f.label :table_num %>
              <%= f.number_field :table_num, required: true %>
            </div>
            <div class="field">
              <%= f.label :num_seats, "No. of Seats" %>
              <%= f.number_field :num_seats, required: true %>
            </div>
          </div>
          <p></p>
          <%= f.submit 'Create Table', :class => 'ui big teal button' %>
        <% end %>
      </div>
    </div>
  

  