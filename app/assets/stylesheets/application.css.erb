@import url(https://fonts.googleapis.com/css?family=Grand+Hotel);
@import url(https://fonts.googleapis.com/css?family=Lato);
@import url(https://fonts.googleapis.com/css?family=Oswald);
@import url(https://fonts.googleapis.com/css?family=Sacramento);


body {
  box-sizing: border-box;
  margin: 0 auto;
  overflow: auto;
}

body.pushable {
  background: transparent !important;
}

.welcome-wrapper, .page-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: transparent;
}

.page-wrapper {
  background: url('lights.png') fixed no-repeat;
  background-size: cover;
}

.welcome {
  font: 9rem 'Grand Hotel';
  color: white;
  text-align: center; 
  margin: 0 auto;
  line-height: 1.12;
}

#login-box { position: relative; }

.pusher {
  background-color: transparent !important;
/*  position: absolute !important;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: scroll !important;*/
}

.site-wrapper {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  margin: 0 auto;
  background: rgb(0,39,72) !important;
  /* Linear Gradient in case my pictures don't load :) */
  background-image: -webkit-repeating-linear-gradient(-45deg, 
    transparent, transparent 30px,  
    rgba(255,255,255,0.05) 30px, 
    rgba(255,255,255,0.05) 60px) !important;

  background-image: repeating-linear-gradient(-45deg, 
    transparent, transparent 30px,  
    rgba(255,255,255,0.05) 30px, 
    rgba(255,255,255,0.05) 60px) !important;
  /* End Linear Gradient*/
  overflow: scroll;
  z-index: 4;
}

.launch-icon {
  position: fixed;
  top: 4%;
  right: 10%;
  z-index: 999;
  border: 5px solid white;
  border-radius: 50%;
}

.small.circular.inverted.orange.sidebar.icon{
  margin-right: 0;
}
.mini.circular.inverted.orange.sidebar.icon{
  margin-left: 8px;
}

.ui.vertical.dropdown-menu {
  background: url('lights-transparent.png') no-repeat fixed;
  background-size: cover;
  background-color: rgba(0,0,0,0.9);
  text-align: center;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 100;
  left: 0;
  display: none;
  padding-top: 20px; 
  overflow: scroll;
}


.ui.secondary.menu {
  margin: 0 auto;
}

.ui.secondary.pointing.menu {
  margin: 10px 0 14px 0;
}

.landing { width: 290px; }

.landing-welcome {
  font: 3.75em 'Sacramento';
  line-height: 0.7;
  color: rgb(220,145,78);
}

.landing-text{
  font-size: 3.2em;
  text-transform: uppercase;
  line-height: .9;
}

.section-header {
  font: 2.5em 'Grand Hotel';
  font-weight: 400;
  color: rgba(224,157,98,1);
  text-align: center;
  margin-top: 40px;
  text-transform: capitalize;
}

.page-header {
  font: 2.65em 'Oswald';
  text-align: center;
  margin-top: 40px;
}

.main-menu { 
  font-size: 2.6em !important;
  line-height: 1.5;
}

input[type="text"].inverted, input[type="password"].inverted, input[type="number"].inverted {
  color: white !important;
  font-family: 'Lato' !important;
}

input[type="number"].inverted {
  font-size: 1.5em !important;
  text-align: center;
  border: 2px solid rgba(255,255,255,0.5) !important;
  border-radius: .5em !important;
}

.ui.circular.segment.tables {
  padding: 30px 20px;
}


.receipt >.row {
  padding-top: 7px !important;
}


/* Modal Styling */
.modal {
  top: 0;
  left: 0;
  position: fixed;
  display: none;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  overflow: scroll;
  z-index: 5;
}

.modal-body {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: scroll;
}

.modal-content {
  position: relative;
  background-color: transparent;
  border-radius: 0.5rem;
}

.modal input[type="text"], .receipt >.row {
  color: black !important;
}

.close-modal {
  position: absolute;
  z-index: 10;
  top: 2%;
  right: 0;
}

.close-modal:hover {
  cursor: pointer;
}

/* End Modal Styling*/

.ui.card {
  padding: 20px 0 !important;
}

.ui.grid >.row {
  padding-bottom: 0;
  color: white;
}

.pushable > .pusher.dimmed:after {
    display: none !important;
}


/* Available & Unavailable Table Styling */

.selectable-table > .ui.circular.segment {
  background-color: rgba(243,218,196,1);
  border: 2px solid rgba(224,157,98,0.8);
}

.selectable-table > .ui.circular.segment:hover {
  background-color: rgba(243,218,196,0.85);
}

.unselectable-table > .ui.circular.segment {
  background-color: rgba(211,211,211,1);
  border: 2px solid rgb(190,190,190);
}

/****************************************/


div.subtotal.row {
  padding-top: 0 !important;
  font-style: italic;
}

.dimmed { color: rgba(255,255,255,0.65);}


/* Important Overrides - Refactor This! */
a:hover{ cursor: pointer;}
a.item { padding: 13px 8px !important; }
a.item:hover { color: rgba(224,157,98,1) !important; }
.no-display { display:none; }
.italic {font-style: italic;}
.secondary-font { font-family:'Oswald' !important; }
.white { color: white !important; }
.normal { font-weight: 400 !important }
.thin { width: 75% !important; }
.thinner { width: 60% !important; }
.thinnest { width: 40% !important; }
.centered { text-align: center; }
.row.basic.button{
  padding: 14px 0 !important;
  margin: 7px 0;
}
div.ui.fitted.divider { margin: 10px !important; }
.menu-column { padding-right: 0 !important; }
/* End Important Overrides */


@media all and (max-width:630px) {
  .page-wrapper {
    background-image: url('lights-small.png');
    background-size: cover;
    background-position: right top;
  }

  .launch-icon {
    position: fixed;
    top: 3%;
    right: 4%;
  }
  .close-modal {
    position: absolute;
    z-index: 10;
    top: 2%;
    right: 0;
  }

  .ui.vertical.dropdown-menu {
    background: url('lights-small-transparent.png') no-repeat fixed;
    background-color: rgba(0,0,0,0.9);
    background-size: cover;
    background-position: top right;
    text-align: center;
    overflow: scroll;

  }

  .section-header {
    font: 2.25em 'Grand Hotel';
    line-height: 1;
    font-weight: 400;
    color: rgba(224,157,98,1);
    text-align: center;
    margin-top: 7%;
    text-transform: capitalize;
  }

  .main-menu { 
    font-size: 2.45em !important;
    line-height: 1.25;
  }

}


