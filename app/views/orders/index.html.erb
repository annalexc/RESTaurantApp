<div class="ui text container">
<%= render 'navigationall' %> 
  <div class="ui center aligned vertical segment">
    <h5 class="ui inverted header secondary-font main-menu">OPEN ORDERS</h5>
    <div class="hidden ui divider"></div>
      <div class="ui centered doubling cards">
        <% @open_orders.each do |order| %>
          <div class="card">
            <div class="header">
              <h2 class="ui header">Table <%= order.customer.party.table.table_num %></h2></div>            
            <div class="content">
              <%= order.item.description %>
            </div>
            <div class="extra content">
              Submitted at <%= order.item.created_at.to_formatted_s(:short) %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>




