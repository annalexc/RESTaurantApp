<div class="ui text container">
<%= render 'navigationall' %> 
  <div class="ui center aligned vertical segment">
    <h5 class="ui inverted header secondary-font main-menu">OPEN ORDERS</h5>
    <div class="hidden ui divider"></div>
      <div class="ui centered doubling cards">
        <% @open_orders.each do |order| %>
          <div class="card">
            <div class="header">
              <div class="ui big header">Table <%= order.customer.party.table.table_num %></div>
            </div>

            <div class="content">
              <%= order.item.description %>
              <div class="ui divider"></div>
              <p>Special Requests: <%= order.comments %></p>
            </div>
            <div class="extra content">
              Submitted at <%= order.item.created_at.to_formatted_s(:short) %>

              <%= form_for order_path(order.id) do |f| %>
                <%= f.label 'DONE' %>
                <%= f.check_box :is_completed, {:class => 'secondary-font', checked: 'checked'} %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>




