<!-- PARTY SHOW PAGE -->
<!-- As a user, I want to be able to: -->
<!-- (1) VIEW the details of a single UNPAID party -->
<!-- (2) VIEW all the comprising guests of that party -->
<!-- (3) SELECT a guest to subsequently create a order -->
<!-- (3) CHECKOUT the party (mark the party as PAID) -->

<div class="ui center aligned vertical segment">

<h1>Table <%= @party.table.table_num %> > Party of <%= @party.size %> </h1>

<!-- HOME BUTTON here for now.... -->
<a href="/users/landing" class="ui yellow right labeled icon button">
  <i class="home icon"></i>Home </a>
<div class="ui hidden divider"></div>
<!-- HOME BUTTON END -->
<div class="ui text container">
  <div class="ui centered grid">
    <div class="ui vertical segment"></div>
      <% @party.customers.each do |customer| %> 
        <%= link_to(customer_path(customer.id), class: 'ui center aligned huge icon header') do %>
          <i class="circular inverted teal user icon"></i>
          <div class="ui sub header">Guest <%= customer.customer_num %> 
            <div class="small ui label"><%= customer.orders.size %></div>
          </div>
        <% end %>
      <% end %>
    </div>

<div class="ui hidden divider"></div>
<button class="ui secondary button view-receipt">
  View Receipt
</button>
  
  <!-- CHECKOUT MODAL -->

  <div class="ui medium modal">
    <i class="close icon"></i>
    <%= render 'partyreceipt' %>
  </div>





