<!-- TABLE INDEX PAGE -->


<div class="ui center aligned vertical segment">
  <h1>New Table Form</h1>

  <!-- HOME BUTTON here for now.... -->
  <a href="/users/landing" class="ui yellow right labeled icon button">
    <i class="home icon"></i>Home </a>
  <div class="ui hidden divider"></div>
  <!-- HOME BUTTON END -->

    <div class="ui text container">
      <div class="ui form">
        <%= form_for @new_table  do |f| %>
          <div class="equal width fields">    
            <div class="field">
              <%= f.label :table_num %>
              <%= f.number_field :table_num, required: true %>
            </div>
            <div class="field">
              <%= f.label :num_seats, "No. of Seats" %>
              <%= f.number_field :num_seats, required: true %>
            </div>
          </div>
          <p></p>
          <%= f.submit 'Create Table', :class => 'ui teal button' %>

          <a href="/users/landing" class="ui yellow right labeled icon button">
            <i class="home icon"></i>
            Home
          </a>
          <div class="ui hidden divider"></div>
        <% end %>
      </div>
    </div>
</div>

<div class="ui vertical segment">
    <div class="ui four centered doubling cards">
      <% @tables.each do |table| %>
        <div class="ui card ">
          <div class="content">
              
              <!-- User Action Icons -->
              <a rel="nofollow" data-method="delete" href="/tables/<%= table.id %>"><i class="right floated large teal remove icon"></i></a>
              <a href="/tables/<%= table.id %>/edit"><i class="right floated large teal edit icon"></i></a>
              <!-- End User Action Icons -->

            <div class="header">Table #<%= table.table_num %></div>

            <div class="meta">
              <span class="category">Seats: <%= table.num_seats %></span>
            </div>
            <div class="ui divider"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>